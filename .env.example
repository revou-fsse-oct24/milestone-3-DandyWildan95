# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/revobank
DATABASE_TEST_URL=postgresql://username:password@localhost/revobank_test

# Flask Configuration
FLASK_ENV=development
FLASK_APP=src/app.py
SECRET_KEY=your_secret_key_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/revobank.log

# Email Configuration (for MFA)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Security Settings
SECURITY_PASSWORD_SALT=your_password_salt
MAX_LOGIN_ATTEMPTS=5

# Optional: External Services
SMS_GATEWAY_URL=https://your-sms-gateway.com/api
SMS_API_KEY=your_sms_api_key

# Rate Limiting
RATE_LIMIT_DEFAULT=100  # requests per hour